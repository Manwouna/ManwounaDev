<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/banner">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorAccent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Manwouna Dev"
            android:layout_width="166dp"
            android:layout_height="29dp"
            android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="24dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" android:textSize="18sp"
            android:textAlignment="center" android:fontFamily="@font/comfortaa_bold"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView15"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintEnd_toStartOf="@+id/imageView16"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintTop_toTopOf="@+id/imageView16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView16"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toEndOf="@+id/imageView15" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView19" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="@+id/imageView19"
            app:layout_constraintBottom_toBottomOf="@+id/imageView19"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView19"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView20"
            android:scaleType="centerCrop" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView22" app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView21"
            android:scaleType="centerCrop" app:layout_constraintTop_toTopOf="@+id/imageView20"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/imageView23"
            app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView22"
            android:scaleType="centerCrop" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="@+id/imageView20"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView23"
            android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView21" app:layout_constraintDimensionRatio="16:9"/>
    <Button
            android:text="Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/imageView23"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView23"
            style="@style/Widget.AppCompat.Button.Borderless" android:elevation="0dp"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@android:color/white" android:background="@drawable/rounded_gradient"/>
</android.support.constraint.ConstraintLayout>