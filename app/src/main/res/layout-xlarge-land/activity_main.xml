<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/banner" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Manwouna Dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textStyle="bold"
            android:textAlignment="center" android:textSize="36sp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/banner" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintEnd_toStartOf="@+id/imageView11"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/banner"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView11"
            app:layout_constraintStart_toEndOf="@+id/imageView10" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView12" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="@+id/imageView10"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/imageView11" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"/>
    <Button
            android:text="Customise Dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless" android:fontFamily="@font/comfortaa_bold"
            android:textStyle="bold" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/banner" android:background="@drawable/rounded_gradient"
            android:textColor="@android:color/white" android:textSize="18sp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView13" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="24dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView15" app:layout_constraintDimensionRatio="16:9"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView14"
            app:layout_constraintTop_toTopOf="@+id/imageView13" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="24dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView16" app:layout_constraintDimensionRatio="16:9"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView15"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="@+id/imageView13"
            app:layout_constraintDimensionRatio="16:9" android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView14"
            app:layout_constraintDimensionRatio="16:9" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:scaleType="centerCrop"/>
</android.support.constraint.ConstraintLayout>